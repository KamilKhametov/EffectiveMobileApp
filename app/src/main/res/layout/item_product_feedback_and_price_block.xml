<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topView"
        android:progressTint="@color/orange"
        tools:rating="4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ratingCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8"
        android:drawableEnd="@drawable/icv_ellipse_grey_2"
        android:drawablePadding="@dimen/dimen_6"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@id/ratingBar"
        app:layout_constraintStart_toEndOf="@id/ratingBar"
        app:layout_constraintTop_toTopOf="@id/ratingBar"
        tools:text="4.3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reviewsCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_6"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@id/ratingCountTextView"
        app:layout_constraintStart_toEndOf="@id/ratingCountTextView"
        app:layout_constraintTop_toTopOf="@id/ratingCountTextView"
        tools:text="4 отзыва" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:fontFamily="@font/sf_pro_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewsCountTextView"
        tools:text="549 ₽" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/oldPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@id/priceTextView"
        app:layout_constraintStart_toEndOf="@id/priceTextView"
        app:layout_constraintTop_toTopOf="@id/priceTextView"
        tools:text="899 ₽" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/discountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:background="@drawable/background_pink_round_4"
        android:fontFamily="@font/sf_pro_regular"
        android:paddingHorizontal="@dimen/dimen_6"
        android:paddingVertical="@dimen/dimen_2"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintBottom_toBottomOf="@id/oldPriceTextView"
        app:layout_constraintStart_toEndOf="@id/oldPriceTextView"
        app:layout_constraintTop_toTopOf="@id/oldPriceTextView"
        tools:text="-35%" />

</androidx.constraintlayout.widget.ConstraintLayout>