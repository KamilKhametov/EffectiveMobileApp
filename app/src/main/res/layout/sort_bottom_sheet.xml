<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/popularSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:fontFamily="@font/sf_pro_medium"
        android:paddingVertical="@dimen/dimen_16"
        android:paddingStart="@dimen/dimen_16"
        android:text="По популярности"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reducingSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_medium"
        android:paddingVertical="@dimen/dimen_16"
        android:paddingStart="@dimen/dimen_16"
        android:text="По уменьшению цены"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popularSort" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ascendingSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_medium"
        android:paddingVertical="@dimen/dimen_16"
        android:paddingStart="@dimen/dimen_16"
        android:text="По возрастанию цены"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reducingSort" />

</androidx.constraintlayout.widget.ConstraintLayout>